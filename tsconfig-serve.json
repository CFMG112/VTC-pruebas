{
  "compilerOptions": {
    "outDir": "dist-electron/",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2017",
    "types": [
      "node"
    ],
    "lib": [
      "es2019",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src-electron/main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}